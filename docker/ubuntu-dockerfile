FROM ubuntu:16.04
RUN mv /etc/apt/sources.list /etc/apt/sources.list.bac
COPY ./sources.list /etc/apt/sources.list
RUN apt-get update \
    && apt-get install -y \
    openssh-server \
    net-tools \
    iputils-ping \
    && mv /etc/ssh/sshd_config /etc/ssh/sshd_config.bac \
    && echo "root:admin" | chpasswd
COPY ./sshd_config /etc/ssh/
